<?xml version="1.0" encoding="UTF-8" ?>

<odoo>

    <record id="hospital_patient_kanban" model="ir.ui.view">
        <field name="name">hospital.patient.kanban</field>
        <field name="model">hospital.patient</field>
        <field name="arch" type="xml">
            <kanban>
                <field name="id"/>
                <field name="patient_name"/>
                <field name="name_seq"/>
                <field name="patient_age"/>
                <field name="image"/>
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_global_click o_kanban_record_has_image_fill o_res_hospital_patient_kanban">
                            <t t-if="record.image.raw_value">
                                <div class="o_kanban_image_fill_left d-none d-md-block"
                                      t-attf-style="background-image:url('#{kanban_image('hospital.patient', 'image', record.id.raw_value)}')" />

                            </t>
                            <t t-else="">
                                <img class="o_kanban_image" alt="Avatar" t-att-src="_s + '/base/static/img/avatar_grey.png'" />
                            </t>
                            <div class="oe_kanban_details">
                                <strong class="o_kanban_record_title">
                                    <field name="patient_name"/>
                                </strong>
                                <div class="o_kanban_tags_selection"/>
                                <ul>
                                    <li>ID: <field name="name_seq" /></li>
                                    <li>Age: <field name="patient_age" /></li>
                                </ul>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <record id="hospital_patient_search" model="ir.ui.view">
        <field name="name">hospital.patient.search</field>
        <field name="model">hospital.patient</field>
        <field name="arch" type="xml">
            <search string="Search Patients">
                <field name="patient_name" string="default"
                       filter_domain="['|', ('patient_name', 'ilike', self), ('name_seq', 'ilike', self)]"/>
                <field name="patient_name" string="patient name"/>
                <field name="name_seq" string="patient ID"/>
                <separator/>
                <filter string="Male" name="gender" domain="[('gender', '=', 'male')]"/>
                <filter string="Female" name="gender" domain="[('gender', '=', 'female')]"/>
                <group>
                    <filter string="Gender" name="gender" context="{'group_by':'gender'}"/>
                </group>
            </search>
        </field>
    </record>

    <record id="patient_form" model="ir.ui.view">
        <field name="name">hospital.patient.form</field>
        <field name="model">hospital.patient</field>
        <field name="arch" type="xml">
            <form string="Patient">
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name_seq" readonly="1"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="patient_name"/>
                            <field name="patient_age"/>
                            <field name="gender"/>
                        </group>
                        <group>
                            <field name="image" widget="image" class="oe_avatar"
                                   options="{&quot;zoom&quot;: true, &quot;preview_image&quot;:&quot;image&quot;}"/>
                        </group>
                    </group>
                    <group>
                        <field name="notes"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="patient_tree" model="ir.ui.view">
        <field name="name">hospital.patient.tree</field>
        <field name="model">hospital.patient</field>
        <field name="arch" type="xml">
            <tree string="Patient">
                <field name="name_seq"/>
                <field name="patient_name"/>
                <field name="patient_age"/>
                <field name="gender"/>
                <field name="notes"/>
            </tree>
        </field>
    </record>

    <record id="action_patient" model="ir.actions.act_window">
        <field name="name">Patient</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">hospital.patient</field>
        <field name="view_mode">tree,kanban,form</field>
        <field name="help" type="html">
            <p class="oe_view_nocontent_create">
                <!-- Add Text Here -->
            </p>
            <p>
                <!-- More details about what a user can do with this object will be OK -->
            </p>
        </field>
    </record>

    <!-- This Menu Item will appear in the Upper bar, That's why It needs NO parent or action -->
    <menuitem id="hospital_root" name="Hospital Mgt" sequence="1"/>

    <!-- This Menu Item Must have a parent -->
    <menuitem id="hospital_patient"
              name="Patient"
              parent="hospital_root"
              action="action_patient"
              sequence="10"/>

    <!-- This Menu Item must have a parent and an action -->
    <!--    <menuitem id="hospital_patient_menu" name="Patient" parent="hospital_menu" action="" sequence="10"/>-->
</odoo>